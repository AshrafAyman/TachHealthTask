@model CreateRoleViewModel
@{
    ViewBag.Title = "Roles Manager";
}

   <h1>Roles Manager</h1>
   <form asp-action="CreateRole" method="post" class="mt-3">
       <div asp-validation-summary="All" class="text-danger">
       </div>
       <div class="form-group row">
           <label asp-for="RoleName" class="col-sm-1 col-form-label font-weight-bold"></label>
           <div class="col-sm-6">
               <input asp-for="RoleName" class="form-control" placeholder="Name">
               <span asp-validation-for="RoleName" class="text-danger"></span>
           </div>
           <div class="col-sm-4">
               <button type="submit" class="btn btn-primary" style="width:auto">
                   Create Role
               </button>
           </div>
       </div>
       <table class="table table-striped">
           <thead>
               <tr>

                   <th>Id</th>
                   <th>Role</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var role in Model.Roles)
               {
                   <tr>
                       <td>@role.Id</td>
                       <td>@role.Name</td>
                   </tr>
               }

           </tbody>
       </table>

